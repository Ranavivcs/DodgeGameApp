<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/spacey_panel"
    android:gravity="center"
    android:elevation="8dp">

    <TextView
        android:id="@+id/dialog_TXT_gameover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/dialog_TXT_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0\nDistance: 0"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/dialog_BTN_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retry"
        android:backgroundTint="@color/darkBlue"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/dialog_BTN_viewscores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Top Scores"
        android:backgroundTint="@color/darkBlue"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/dialog_BTN_mainmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:backgroundTint="@color/darkBlue"
        android:textColor="@android:color/white" />


</LinearLayout>
